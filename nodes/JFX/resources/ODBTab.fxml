<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:id="odbPane" prefHeight="500.0" prefWidth="520.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ODBTab">
   <children>
      <HBox spacing="10" >
        <padding><Insets top="10" right="10" left="10"/></padding>
        <children>
          <VBox alignment="center" spacing="10" >
             <children>
               <Button fx:id="fclose" onAction="#fClose" text="Forced Close"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="frollback" onAction="#fRollback" text="Forced Rollback"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="frollbackKey" onAction="#fRollbackKey" text="Forced Rollback Key"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="ffreeKeys" onAction="#fFreeKeys" text="Forced Free Keys"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="ffreeKey" onAction="#fFreeKey" text="Forced Free Key"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="addcluster" onAction="#aCluster" text="Add Node"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="removecluster" onAction="#rCluster" text="Remove Node"
                       prefHeight="50.0" prefWidth="160.0" />
               <Button fx:id="removeclient" onAction="#rClient" text="Remove Client"
                       prefHeight="50.0" prefWidth="160.0" />
            </children>
          </VBox>
          <TextArea fx:id="report" prefHeight="490.0" prefWidth="362.0"
                    wrapText="true" editable="false"/>
        </children>
     </HBox>
   </children>
</AnchorPane>